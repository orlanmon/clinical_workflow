@model IEnumerable<clinicalworkflow.web.services.dto.PatientClinicalDataDTO>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="container">

    <section class="row">
        <h1>Patient Clinical Data Administration</h1>

        <div class="col-md-4">
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table-striped">
                <thead>
                    <tr>
                        <th>
                            Patient Name
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldOne)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldTwo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldThree)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldFour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldFive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldSix)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClinicalDataFieldSeven)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td></td>   <!-- Patient Name -->
                        

                        <td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldOne)</td>
                        <td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldTwo)</td>
                        <td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldThree)</td>
                        <!--<td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldFour)</td>--> <!--  Lookup -->

                        <td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldFive)</td>
                        <!--<td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldSix)</td>--> <!-- Lookup -->

                        <td>@Html.DisplayFor(ModelItem => item.ClinicalDataFieldSeven)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PatientClinicalDataId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.PatientClinicalDataId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.PatientClinicalDataId">Delete</a>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>

        </div>
    </section>
</div>